@model List<PlantItOut.Models.PlantCategory>

<h1>All Plant Categories</h1>

@if (Model.Count == 0)
{
    <p>No Plant Categories yet!</p>
}
else
{
    <table class="table">
        <tr>
            <th>Id
            <th>Category Name</th>
        </tr>
        @foreach (var plantCategory in Model)
        {
            <tr>
                <td>@plantCategory.Id</td>
                <td>@plantCategory.Name</td>
            </tr>
        }
    </table>
}