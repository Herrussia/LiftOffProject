@model List<PlantItOut.Models.Tag>

<h1>All Plant Tags</h1>

@if (Model.Count == 0)
{
    <p>No tags yet!</p>
}
else
{
    <table class="table">
        <tr>
            <th>Id
            <th>Tag Name</th>
        </tr>
        @foreach (var tag in Model)
        {
            <tr>
                <td>@tag.Id</td>
                <td>@tag.Name</td>
            </tr>
        }
    </table>
}

<a asp-controller="Tag" asp-action="Add">Add a new Tag</a>

