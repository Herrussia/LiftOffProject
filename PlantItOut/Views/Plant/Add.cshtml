@model PlantItOut.ViewModels.AddPlantViewModel;

<h1>Add A new Plant!</h1>

<form asp-controller="Plant" asp-action="Add" method="post">

    <div class="form-group">
        <h6>Plant Name</h6>
        @*<label asp-for="Name"></label>*@
        <input asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <h6>Plant Description</h6>
        @*<label asp-for="Description"></label>*@
        <textarea name="@Html.NameFor(m=>m.Description)" rows="4" cols="50"></textarea>
        <span asp-validation-for="Description"></span>
    </div>
    <div class="form-group">
        <h6>Plant Category</h6>
        @*<label asp-for="CategoryId">Category</label>*@
        <select asp-for="CategoryId" asp-items="Model.PlantCategories"></select>
    </div>
    <div class="form-group">
        <h6>Image Link</h6>
        <input asp-for="ImageLink" />
        <span asp-validation-for="ImageLink"></span>
    </div>

        <a asp-controller="plantCategory" asp-action="Create">Create a New Category</a>

    <input type="submit" value="Add New Plant" />
</form>
