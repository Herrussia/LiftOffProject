@model List<PlantItOut.Models.Plant>

<h1>HousePlants!</h1>

<p>
    <a asp-controller="Plant" asp-action="Add">Add Plant</a>
</p>


<p>
    <a asp-controller="Plant" asp-action="Delete">Delete A Plant</a>
</p>

@if (Model.Count == 0)
{
    <p>No plants added yet!</p>
}
else
{
    <table class="table">
        <tr>
            <th>
                Id
            </th>
            <th>
                Name
            </th>
            <th>
                Description
            </th>
            <th>
                Category
            </th>
        </tr>
        @foreach (var plant in Model)
        {
            <tr>
                <td>@plant.Id</td>
                <td><a asp-controller="Plants" asp-action="Detail" asp-route-id="@plant.Id">@plant.Name</a></td>
                <td>@plant.Description</td>
                <td>@plant.Category.Name</td>
            </tr>
        }
    </table>
}

