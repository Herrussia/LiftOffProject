@model PlantItOut.ViewModels.PlantDetailViewModel

<form method="post">
    <h1>@Model.Name</h1>
    <div class="img">
        <img src="@Model.ImageLink" width="400" height="600"/>
    </div>

    <table class="table">
        <tr>
            <th>Description</th>
            <td>@Model.Description</td>
        </tr>
        <tr>
            <th>Category</th>
            <td>@Model.Category</td>
        </tr>
        <tr>
            <th>Tags</th>
            <td>@Model.TagText</td>
        </tr>
    </table>
    <a asp-controller="Tag" asp-action="AddPlant" asp-route-id="@Model.PlantId">Add Tags to Plant</a>
</form>


