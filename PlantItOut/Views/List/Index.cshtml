<div class="container body-content">
    <h1>@ViewBag.title</h1>
    <h2 class="centered">View Plants By Category</h2>
</div>

<table class="centeredTable">
    <tr>
        @foreach (var column in ViewBag.columns)
        {
            @if (column.Key != "all")
            {
                <th>@column.Value</th>
            }
        }
    </tr>
    <tr>
        @foreach (var category in ViewBag.tableChoices)
        {
            <td>
                <ul>
                    @if (category == "water level")
                    {
                        @foreach (var item in ViewBag.tags)
                        {
                            <li>
                                <a asp-controller="List" asp-action="Plants" asp-route-column="@category" asp-route-value="@item.Name">@item.Name</a>
                            </li>
                        }
                    }
                    @if (category == "light level")
                    {
                        @foreach (var item in ViewBag.tags)
                        {
                            <li>
                                <a asp-controller="List" asp-action="Plants" asp-route-column="@category" asp-route-value="@item.Name">@item.Name</a>
                            </li>
                        }
                    }
                    @if (category == "skill level")
                    {
                        @foreach (var item in ViewBag.tags)
                        {
                            <li>
                                <a asp-controller="List" asp-action="Plants" asp-route-column="@category" asp-route-value="@item.Name">@item.Name</a>
                            </li>
                        }
                    }
                    else
                    {
                        @foreach (var item in ViewBag.tags)
                        {
                            <li>
                                <a asp-controller="List" asp-action="Plants" asp-route-column="@category" asp-route-value="@item.Name">@item.Name</a>
                            </li>
                        }
                    }

                </ul>
            </td>
        }
    </tr>
</table>
